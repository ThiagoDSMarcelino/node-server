generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model User {
  id          String       @id
  email       String       @unique
  firstName   String
  lastName    String?
  image       String
  password    String
  cpf         String       @unique
  birthday    DateTime
  bookings    Booking[]
  creditCards CreditCard[]
  rates       Rating[]
}

model Hotel {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  city         String
  neighborhood String
  complement   String
  cep          String
  country      String
  state        String
  phone        String
  email        String   @unique
  cnpj         String   @unique
  street       String
  rates        Rating[]
  rooms        Room[]
}

model Room {
  id        Int           @id @default(autoincrement())
  doubleBed Int
  singleBed Int
  daily     Decimal
  hotelId   Int
  guests    Int
  bookings  Booking[]
  features  FeatureRoom[]
  hotel     Hotel         @relation(fields: [hotelId], references: [id])
}

model Booking {
  id       Int      @id @default(autoincrement())
  checkIn  DateTime
  checkOut DateTime
  roomId   Int
  userId   String
  room     Room     @relation(fields: [roomId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

model Feature {
  id       Int           @id @default(autoincrement())
  name     String        @unique
  features FeatureRoom[]
}

model FeatureRoom {
  id        Int     @id @default(autoincrement())
  featureId Int
  roomId    Int
  feature   Feature @relation(fields: [featureId], references: [id])
  room      Room    @relation(fields: [roomId], references: [id])
}

model Rating {
  id      Int     @id @default(autoincrement())
  hotelId Int
  content String?
  rate    Float
  userId  String
  Hotel   Hotel   @relation(fields: [hotelId], references: [id])
  user    User    @relation(fields: [userId], references: [id])
}

model CreditCard {
  id         Int    @id @default(autoincrement())
  number     String
  holder     String
  userId     String
  code       String
  expiration String
  user       User   @relation(fields: [userId], references: [id])
}

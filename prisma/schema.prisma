generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  hash     String
}

model Client {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  firstName  String
  lastName   String
  password   String
  hash       String
  CPF        String
  rates Rating[]
  bookings   Booking[]
}

model Hotel {
  id           Int          @id @default(autoincrement())
  name         String       @unique
  city         String
  neighborhood String
  complement   String
  CEP          String
  country      String
  state        String
  phone        String
  email        String       @unique
  CNPJ         String       @unique
  rates   Rating[]
  rooms        Room[]
}

model Room {
  id         Int           @id @default(autoincrement())
  doubleBed  Int
  singlerBed Int
  adults     Int
  children   Int
  daily      Decimal
  hotelId    Int
  bookings   Booking[]
  features   FeatureRoom[]
  hotel      Hotel         @relation(fields: [hotelId], references: [id])
}

model Booking {
  id       Int      @id @default(autoincrement())
  checkIn  DateTime
  checkOut DateTime
  clientId Int
  roomId   Int
  client   Client   @relation(fields: [clientId], references: [id])
  room     Room     @relation(fields: [roomId], references: [id])
}

model Feature {
  id       Int           @id @default(autoincrement())
  name     String
  features FeatureRoom[]
}

model FeatureRoom {
  id        Int     @id @default(autoincrement())
  featureId Int
  roomId    Int
  feature   Feature @relation(fields: [featureId], references: [id])
  room      Room    @relation(fields: [roomId], references: [id])
}

model Rating {
  id         Int     @id @default(autoincrement())
  clientId   Int
  hotelId    Int
  content    String?
  rate Float
  Client     Client  @relation(fields: [clientId], references: [id])
  Hotel      Hotel   @relation(fields: [hotelId], references: [id])
}
